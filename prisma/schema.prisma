// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String @id @default(cuid())
  fullname        String
  email           String @unique
  phone           String
  password        String
  confirmPassword String
  land            Land[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  houses House[]
}

model Inquiry {
  id         String   @id @default(cuid())
  name       String
  phone      String
  email      String
  subject    String
  message    String
  receivedAt DateTime @default(now())
}

model ResetPassword {
  email String @unique

  pass_reset_token         BigInt
  pass_reset_token_expires BigInt
}


model House {
id                  String           @id @default(cuid())

propertyTitle String
image String
price Int
priceLabel PriceLabel
address String
negotiable Negotiable

livingRoom Int?
kitchen Int?
bedroom Int?
toilet Int?
bathroom Int?
roadAccess Int?
builtYear Int?
storey Int?
floor Int?
garage Int?

propertyId String?
category  PropertyCategory
purpose Purpose
areaType AreaType
area String
roadType RoadType?
propertyType PropertyType
propertyFace PropertyFace
PropertyFeature String[]

condition String
landmark String?

ownerName String
contactNumber String
propertyDesc String?

createdAt           DateTime         @default(now())
updatedAt           DateTime         @updatedAt()


User User? @relation(fields: [userId], references: [id])
userId String?

}

enum Negotiable {
  YES
  NO
}


enum AreaType {
  HAAT
  ROPANI
  ANNA
  KATTHA
  BIGGA
  SQUAREFEET
}
enum Purpose {
  RENT
  SALE
}

enum PropertyCategory {
  COMMERCIAL
  SEMICOMMERCIAL
  RESIDENTAL
}

enum PropertyFace {
  EAST
  WEST
  NORTH
  SOUTH
}

enum PriceLabel {
  PERMONTH
  PERYEAR
  PERANNA
  PERKATTHA
  PERROPHANI
  PERHAAT
  PERBIGHA
  TOTALPRICE
}

enum PropertyType {
  room
  apartment
  flat
}

enum RoadType {
  BLACKTOPPED
  CONCRETE
  GRAVEL
  OFFROAD
  NOROAD
  ALLEY
  PAVED
}


model Land {
  id                  String           @id @default(cuid())
  propertyId          String?
  purpose             Purpose
  propertyCategory    PropertyCategory
  propertyFace        PropertyFace
  address             String
  landmark            String?
  roadType            RoadType?
  roadAccess          String?
  areaType            AreaType
  area                String
  price               Int
  priceLabel          PriceLabel
  negotiable          Negotiable
  propertyTitle       String
  propertyDescription String?
  ownerName           String
  contactNumber       String
  image               String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  User   User?   @relation(fields: [userId], references: [id])
  userId String?
}
